<h1><%= @cat.name %></h1>
<table>
  <thead>
    <tr>
      <th>Attributes</th>
      <th>Values</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>AGE</td>
      <td><%= @cat.age %></td>
    </tr>

    <tr>
      <td>BIRTH_DATE</td>
      <td><%= @cat.birth_date %></td>
    </tr> 

    <tr>
      <td>COLOR</td>
      <td><%= @cat.color.upcase %></td>
    </tr>    
    
    <tr>
      <td>SEX</td>
      <td><%= @cat.sex %></td>
    </tr>
  </tbody>
</table>

<br><br>
<h1>RENTAL REQUESTS</h1>
<table>
  <thead>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @cat.rental_requests.order('start_date ASC').each do |request| %>
      <tr>
        <td><%= request.start_date %></td>
        <td><%= request.end_date %></td>
        <td><%= request.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
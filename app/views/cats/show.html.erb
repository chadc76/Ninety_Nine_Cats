<section class="page">
  <div class="centered-box">
    <img src="http://placekitten.com/g/300/300">
    <h1><%= @cat.name.upcase %></h1>
    
    <table>
      <tbody>
        <tr>
          <th>Attribute</th>
          <th>Value</th>
        </tr>
        <tr>
          <td>age</td>
          <td><%= @cat.age %></td>
        </tr>
        <% @columns.each do |attr_name| %>
          <tr>
            <td><%= attr_name %></td>
            <td><%= @cat.send(attr_name) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    
    <a class="edit" href="<%= edit_cat_url(@cat) %>">Edit <%= @cat.name %></a>
    
    <br><br>
    
    <h1>Rental Requests</h1>
    <table>
      <tbody>
        <tr>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Status</th>
        </tr>
        <% @cat.rental_requests.order('start_date').each do |request| %>
          <%= render 'req_tr', req: request %> 
        <% end %>
      </tbody>
    </table>
  </div>
</section>
<section class="page">
  <div class="centered-box">
    <img class="profile-pic" src="https://zultimate.com/wp-content/uploads/2019/12/default-profile.png">
    <h1><%= current_user.username.upcase %></h1>

    <table>
      <tbody>
        <tr>
          <th>Enviroment</th>
          <th>Location</th>
          <th>Logout</th>
        </tr>
        <% current_user.session_tokens.each do |token| %>
          <tr>
            <% if token.token == session[:session_token] %>
              <td>This Device</td>
            <% else %>
              <td><%= token.env %></td>
            <% end %>
            <td><%= token.location %></td>
            <td><%= button_to "Log out", session_url(token), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>